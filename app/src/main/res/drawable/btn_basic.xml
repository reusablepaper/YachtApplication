<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="30dp" />
                   <solid android:color="#A57EB4"/>
                </shape>
            </item>
            <item
                android:left="4dp"
                android:right="4dp"
                android:top="4dp"
                android:bottom="4dp">
                <shape android:shape="rectangle">
                    <corners android:radius="28dp" />
                    <solid android:color="#00000000" /> <stroke
                    android:width="2dp"
                    android:color="#C4C4C4" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="30dp" />
                    <solid android:color="#DCB5EF"/>
                </shape>
            </item>
            <item
                android:left="4dp"
                android:right="4dp"
                android:top="4dp"
                android:bottom="4dp">
                <shape android:shape="rectangle">
                    <corners android:radius="28dp" />
                    <solid android:color="#00000000" /> <stroke
                    android:width="2dp"
                    android:color="#FFFFFF" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>